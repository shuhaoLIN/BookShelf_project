<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/bookshelf_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="设置"
                    android:layout_gravity="left"/>
            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="自动获取书籍详情"
        android:textColor="#ff00"/>

    <LinearLayout
        android:id="@+id/web_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络服务"
            android:textSize="16sp"/>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FF4081"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/auto_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动填充网站栏"
            android:textSize="16sp"/>

        <student.jnu.com.bookshelf.WiperSwitch
            android:id="@+id/wiperSwitch1"
            android:layout_gravity="end"
            android:layout_width="80sp"
            android:layout_height="30sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="备份"
        android:textColor="#ff00"/>

    <LinearLayout
        android:id="@+id/backup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备份位置"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/backup_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/storage/emulated/0/backups"
            android:textSize="12sp"/>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FF4081"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备份应用"
            android:textSize="16sp"/>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FF4081"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/restore_bookshelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恢复应用"
            android:textSize="16sp"/>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FF4081"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/export_bookshelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出为.csv文件"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出为.csv文件以便管理"
            android:textSize="12sp"/>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FF4081"
            android:layout_marginTop="20sp"/>
    </LinearLayout>

</LinearLayout>